generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  name     String
  password String
  image    String?

  orders Order[] @relation("UserOrders")
}

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?
  image       String?
  price       Float
  stock       Int
  order       ProductForOrder[]
}

model Order {
  id        String   @id @default(cuid())
  userId    String
  quantity  Int
  createdAt DateTime @default(now())

  user     User      @relation(fields: [userId], references: [id], "UserOrders")
  products ProductForOrder[] 
}

model ProductForOrder {
  orderId   String
  productId String 
  count     Int     @default(1)
  order Order       @relation(fields: [orderId], references: [id])
  product Product   @relation(fields: [productId], references: [id])
  @@id([orderId, productId])

}
